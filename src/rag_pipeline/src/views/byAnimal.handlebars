<header class="topbar">
  <nav class="nav">
    <div class="brand">{{brand}}</div>
    <div class="navlinks">
      {{#each navLinks}}
      <a class="navlink{{#if active}} active{{/if}}" href="{{href}}">{{label}}</a>
      {{/each}}
    </div>
  </nav>
</header>

<main class="page-wrap page-wrap--species">
  <header class="page-hero">
    <h1 class="page-hero__title">{{pageHeading}}</h1>
    {{#if pageIntro}}
    <p class="page-hero__intro">{{pageIntro}}</p>
    {{/if}}
  </header>

  <div class="searchbar">
    <div class="searchwrap">
      <input id="searchInput" placeholder="{{searchPlaceholder}}" />
      <a class="search-icon" href="#" role="button">
        <i class="bi bi-search"></i>
      </a>
      <button id="filterToggle" type="button" class="btn btn-outline-secondary btn-sm" style="margin-left: 8px;">
        <i class="bi bi-funnel"></i>
        {{filterLabel}}
      </button>
    </div>
  </div>

  <section id="filtersPanel" class="card" hidden style="margin: 12px 0;">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label">IUCN status</label>
          <div class="d-flex flex-wrap gap-2">
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="CR" id="stCR"><label class="form-check-label" for="stCR">CR</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="EN" id="stEN"><label class="form-check-label" for="stEN">EN</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="VU" id="stVU"><label class="form-check-label" for="stVU">VU</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="NT" id="stNT"><label class="form-check-label" for="stNT">NT</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="LC" id="stLC"><label class="form-check-label" for="stLC">LC</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="DD" id="stDD"><label class="form-check-label" for="stDD">DD</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="NE" id="stNE"><label class="form-check-label" for="stNE">NE</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="EX" id="stEX"><label class="form-check-label" for="stEX">EX</label></div>
            <div class="form-check"><input class="form-check-input filter-status" type="checkbox" value="EW" id="stEW"><label class="form-check-label" for="stEW">EW</label></div>
          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label">Image</label>
          <div class="d-flex gap-3">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="hasImage" id="imgAny" value="any" checked>
              <label class="form-check-label" for="imgAny">Any</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="hasImage" id="imgYes" value="true">
              <label class="form-check-label" for="imgYes">Has image</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="hasImage" id="imgNo" value="false">
              <label class="form-check-label" for="imgNo">No image</label>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label" for="filterSource">Source</label>
          <input id="filterSource" class="form-control" placeholder="e.g. wiki, iucn" />
        </div>

        <div class="col-12 col-md-6 col-lg-4">
          <label class="form-label" for="filterSort">Sort</label>
          <select id="filterSort" class="form-select">
            <option value="">Default</option>
            <option value="name">Name (Aâ€“Z)</option>
            <option value="newest">Newest</option>
            <option value="desc_len">Description length</option>
          </select>
        </div>
      </div>

      <div class="d-flex gap-2" style="margin-top: 12px;">
        <button id="filterApply" type="button" class="btn btn-primary btn-sm">
          Apply filters
        </button>
        <button id="filterClear" type="button" class="btn btn-outline-secondary btn-sm">
          Clear
        </button>
        <button id="filterClose" type="button" class="btn btn-link btn-sm">
          Close
        </button>
      </div>
    </div>
  </section>

  <section class="species-directory">
    <div id="grid" class="grid species-grid"></div>
    <nav
      id="pagination"
      class="pagination"
      aria-label="{{paginationLabel}}"
      hidden
    ></nav>
  </section>
</main>

<div id="speciesModal" class="species-modal" aria-hidden="true">
  <div class="species-modal__overlay" data-close="true"></div>
  <article
    class="species-modal__panel"
    role="dialog"
    aria-modal="true"
    aria-labelledby="speciesModalTitle"
  >
    <button
      id="speciesModalClose"
      class="species-modal__close"
      type="button"
      aria-label="Close species details"
    >
      <i class="bi bi-x-lg" aria-hidden="true"></i>
    </button>
    <header class="species-modal__header">
      <div id="speciesModalImageWrap" class="species-modal__media" hidden>
        <img id="speciesModalImage" alt="" />
      </div>
      <div class="species-modal__headline">
        <span class="species-modal__eyebrow">Species profile</span>
        <h2 id="speciesModalTitle"></h2>
        <div id="speciesModalBadges" class="species-modal__badges"></div>
        <p id="speciesModalSummary" class="species-modal__summary" hidden></p>
      </div>
    </header>
    <section class="species-modal__section">
      <h3 class="species-modal__section-title">Full description</h3>
      <div id="speciesModalBody" class="species-modal__body"></div>
    </section>
    <section id="speciesModalSourcesSection" class="species-modal__section" hidden>
      <h3 class="species-modal__section-title">Sources</h3>
      <ul id="speciesModalSources" class="species-modal__sources"></ul>
    </section>
    <footer class="species-modal__footer">
      <a
        id="speciesModalLink"
        class="species-modal__link"
        href="#"
        target="_blank"
        rel="noopener"
        hidden
      >Open reference</a>
    </footer>
  </article>
</div>

<footer class="footer">
  <small>{{{footerNote}}}</small>
</footer>
