<header class="topbar">
  <nav class="nav">
    <div class="brand">{{brand}}</div>
    <div class="navlinks">
      {{#each navLinks}}
      <a class="navlink{{#if active}} active{{/if}}" href="{{href}}">{{label}}</a>
      {{/each}}
    </div>
  </nav>
</header>

<main class="page-wrap about-page">
  <header class="page-hero about-hero">
    <h1 class="page-hero__title">{{pageHeading}}</h1>
    {{#if pageIntro}}
    <p class="page-hero__intro">{{pageIntro}}</p>
    {{/if}}
  </header>

  {{#if teamMembers}}
  <section class="team-grid about-team">
    {{#each teamMembers}}
    <article class="team-card">
      <div class="team-card__media">
        {{#if image}}
        <img src="{{image}}" alt="{{name}}" />
        {{else}}
        <div class="team-card__placeholder">Add image</div>
        {{/if}}
      </div>
      <div class="team-card__body">
        <h2 class="team-card__title">{{name}}</h2>
        {{#if role}}
        <p class="team-card__role">{{role}}</p>
        {{/if}}
        {{#if bio}}
        <p class="team-card__bio">{{bio}}</p>
        {{/if}}
        {{#if email}}
        <a class="team-card__link" href="mailto:{{email}}">{{email}}</a>
        {{/if}}
        {{#if socials}}
        <div class="team-card__socials">
          {{#each socials}}
          <a class="team-card__social" href="{{href}}" target="_blank" rel="noopener">
            <i class="bi {{icon}}"></i>
            <span>{{label}}</span>
          </a>
          {{/each}}
        </div>
        {{/if}}
      </div>
    </article>
    {{/each}}
  </section>
  {{else}}
  <p class="empty-state">Team information will be added soon.</p>
  {{/if}}
</main>

<footer class="footer">
  <small>{{{footerNote}}}</small>
</footer>