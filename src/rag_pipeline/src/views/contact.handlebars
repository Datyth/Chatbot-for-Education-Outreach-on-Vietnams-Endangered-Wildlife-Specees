<header class="topbar">
  <nav class="nav">
    <div class="brand">{{brand}}</div>
    <div class="navlinks">
      {{#each navLinks}}
      <a class="navlink{{#if active}} active{{/if}}" href="{{href}}">{{label}}</a>
      {{/each}}
    </div>
  </nav>
</header>

<main class="page-wrap contact-page">
  <section class="page-hero contact-hero">
    <h1 class="page-hero__title">{{pageHeading}}</h1>
    {{#if pageIntro}}
    <p class="page-hero__intro">{{pageIntro}}</p>
    {{/if}}
  </section>

  <section class="contact-layout">
    <article class="contact-card contact-details">
      <h2 class="contact-card__title">Get in touch</h2>
      <ul class="contact-list">
        {{#each contactChannels}}
        <li class="contact-list__item">
          <span class="contact-list__label">{{type}}</span>
          {{#if href}}
          <a href="{{href}}">{{value}}</a>
          {{else}}
          <span>{{value}}</span>
          {{/if}}
        </li>
        {{/each}}
      </ul>
    </article>

    <article class="contact-card contact-lead">
      <h2 class="contact-card__title">Project Contact</h2>
      <div class="contact-lead__header">
        {{#if contactLead.avatar}}
        <div class="contact-lead__avatar">
          <img src="{{contactLead.avatar}}" alt="{{contactLead.name}}" />
        </div>
        {{/if}}
        <div class="contact-lead__info">
          <p class="contact-lead__name">{{contactLead.name}}</p>
          <p class="contact-lead__role">{{contactLead.role}}</p>
          {{#if contactLead.email}}
          <a class="contact-lead__link" href="mailto:{{contactLead.email}}">{{contactLead.email}}</a>
          {{/if}}
          {{#if contactLead.phone}}
          <a class="contact-lead__link" href="tel:{{contactLead.phone}}">{{contactLead.phone}}</a>
          {{/if}}
        </div>
      </div>
      {{#if contactLead.socials}}
      <div class="contact-socials">
        {{#each contactLead.socials}}
        <a class="contact-social-link" href="{{href}}" target="_blank" rel="noopener">
          <i class="bi {{icon}}"></i>
          <span>{{label}}</span>
        </a>
        {{/each}}
      </div>
      {{/if}}
    </article>

    <article class="contact-card contact-form">
      <h2 class="contact-card__title">{{contactForm.heading}}</h2>
      <form class="contact-form__fields" action="#" method="post" novalidate>
        <label>
          <span>{{contactForm.nameLabel}}</span>
          <input type="text" name="name" placeholder="{{contactForm.namePlaceholder}}" />
        </label>
        <label>
          <span>{{contactForm.emailLabel}}</span>
          <input type="email" name="email" placeholder="{{contactForm.emailPlaceholder}}" />
        </label>
        <label class="contact-form__message">
          <span>{{contactForm.messageLabel}}</span>
          <textarea name="message" rows="5" placeholder="{{contactForm.messagePlaceholder}}"></textarea>
        </label>
        <button type="submit" disabled>{{contactForm.submitLabel}}</button>
        
      </form>
    </article>
  </section>
</main>

<footer class="footer">
  <small>{{{footerNote}}}</small>
</footer>