<header class="topbar">
  <nav class="nav">
    <div class="brand">{{brand}}</div>
    <div class="navlinks">
      {{#each navLinks}}
      <a class="navlink{{#if active}} active{{/if}}" href="{{href}}">{{label}}</a>
      {{/each}}
    </div>
  </nav>
</header>

<main class="home-container">
  <section class="home-main">
    <div id="grid" class="grid"></div>
    <nav
      id="pagination"
      class="pagination"
      aria-label="{{paginationLabel}}"
      hidden
    ></nav>

    <section class="chatbox home-chatbox">
      <h3>{{chatTitle}}</h3>
      <div id="chatWindow" class="chatWindow"></div>
      <form id="chatForm" class="chatForm">
        <input id="chatInput" placeholder="{{chatPlaceholder}}" />
        <button id="sendBtn" type="submit">{{chatSendLabel}}</button>
      </form>
    </section>
  </section>
</main>

<section class="home-hero">
  <div class="home-hero__inner">
    <div class="home-hero__lead">
      <span class="home-hero__kicker">Protect. Restore. Learn.</span>
      <h1 class="home-hero__title">Safeguarding Vietnam's threatened wildlife</h1>
      <p class="home-hero__subtitle">REDLIST combines research, storytelling, and AI-powered exploration to highlight endangered species and inspire conservation action across the country.</p>
      <div class="home-hero__actions">
        <a class="home-hero__btn home-hero__btn--primary" href="/animals">Explore species</a>
        <a class="home-hero__btn home-hero__btn--ghost" href="/about">Meet the team</a>
      </div>
      <p class="home-hero__note">Video courtesy of UTE media studio - captured to celebrate campus biodiversity initiatives.</p>
    </div>
    <div class="home-hero__media">
      <video class="home-hero__video" src="/assets/video/UTElogo.mp4" autoplay muted playsinline></video>
    </div>
  </div>
</section>

<footer class="footer">
  <small>{{{footerNote}}}</small>
</footer>

<div id="docModal" class="doc-modal" aria-hidden="true">
  <div class="doc-modal__overlay" data-close="true"></div>
  <div
    class="doc-modal__content"
    role="dialog"
    aria-modal="true"
    aria-labelledby="docModalTitle"
  >
    <button
      id="docModalClose"
      type="button"
      aria-label="Close document details"
    >
      Ã—
    </button>
    <div id="docModalImgWrap" class="doc-modal__media" hidden>
      <img id="docModalImg" alt="" />
    </div>
    <h2 id="docModalTitle" class="doc-modal__title"></h2>
    <div id="docModalMeta" class="doc-modal__meta"></div>
    <div id="docModalBody" class="doc-modal__body"></div>
  </div>
</div>
